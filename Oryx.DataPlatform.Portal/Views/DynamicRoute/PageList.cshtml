
@{
    ViewData["Title"] = "PageList";
}

<div class="box box-info">
    <div class="box-header with-border">
        <h3 class="box-title">操作</h3>
    </div>
    <div class="box-footer">
        <a href="/DynamicRoute/PageAdd" class="btn btn-info pull-right">添加新页</a>
