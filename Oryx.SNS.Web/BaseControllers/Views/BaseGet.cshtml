@*@model BaseModel*@
<div class="box box-info">
    <div class="box-header with-border">
        <h3 class="box-title">Horizontal Form</h3>
    </div>
    <!-- /.box-header -->
    <!-- form start -->
    @using (Html.BeginForm(FormMethod.Post, new { Class = "form-horizontal" }))
    {
        var properties = ViewData["DataModel"]?.GetType().GetProperties();

        @*<button>提交</button>*@
        <div class="box-body">
            @foreach (var prop in properties)
            {
                <div class="form-group">
                    @switch (prop.Name.ToLower())
                    {
                        case "id":
                            <input type="hidden" name="@prop.Name" value="@prop.GetValue(Model.DetailInfo)" />
                            break;
                        default:
                            <label class="col-sm-2 control-label">@prop.Name</label>
                            <div class="col-sm-10">
                                @*<input type="text" class="form-control" name="@prop.Name" value="@prop.GetValue(Model.DetailInfo)" placeholder="@prop.Name">*@
                                <span>@prop.GetValue(Model.DetailInfo)</span>
                            </div>
                            break;
                    }
                </div>
            }
        </div>
        <!-- /.box-body -->
        <div class="box-footer">
            <button type="button" class="btn btn-default" onclick="javascript:history.go(-1);">Go back</button>
            @*<button type="submit" class="btn btn-info pull-right">Save Edit</button>*@
        </div>
    }
</div> 