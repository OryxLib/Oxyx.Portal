@page
@model IndexModel
@{
    ViewData["Title"] = "首页";
}
@section styles{
    <link href="~/css/pagination.css" rel="stylesheet" />
    <style>

        .imgDefaultConatainer {
            padding: 20px;
            color: #ddd;
            border: 1px solid #ddd;
            height: 100%;
        }
    </style>
}

<div id="carousel-example-captions" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carousel-example-captions" data-slide-to="0" class="active"></li>
        <li data-target="#carousel-example-captions" data-slide-to="1" class=""></li>
        <li data-target="#carousel-example-captions" data-slide-to="2" class=""></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img data-src="holder.js/900x500/auto/#777:#777" alt="900x500" src="data:image/svg+xml;base64," data-holder-rendered="true">
            <div class="carousel-caption">
                <h3>广告位招商</h3>
                <p>欢迎加入趣漫画</p>
            </div>
        </div>
        <div class="item">
            <img data-src="holder.js/900x500/auto/#666:#666" alt="900x500" src="data:image/svg+xml;base64," data-holder-rendered="true">
            <div class="carousel-caption">
                <h3>广告位招商</h3>
                <p>欢迎加入趣漫画</p>
            </div>
        </div>
        <div class="item">
            <img data-src="holder.js/900x500/auto/#555:#555" alt="900x500" src="data:image/svg+xml;base64," data-holder-rendered="true">
            <div class="carousel-caption">
                <h3>广告位招商</h3>
                <p>欢迎加入趣漫画</p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#carousel-example-captions" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#carousel-example-captions" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<div class="row imgContainer">
    <div class="col-md-12">
        <div class="d-flex justify-content-around flex-wrap">
            @foreach (var item in Model.Ctegories)
            {
                <a href="/Contents/CategoryDetail?cid=@item.Id">
                    <div class="imgWrapper">
                        @if (item.MediaResource == null || item.MediaResource.Count < 1)
                        {
                            <div class='imgDefaultConatainer'>
                                <p>趣漫画</p>
                                <p class="label-name">@item.Name</p>
                            </div>
                        }
                        else
                        {<img class="card-img-top"
                              src="@item.MediaResource?[0]?.ActualPath" data-holder-rendered="true">
                        }
                    </div>

                    <h5 class="card-title">@item.Name</h5>
                </a>
            }
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div id="pager" class="m-style M-box1"></div>
    </div>
</div>

<div class="adcontainer col-md-4 col-sm-12 d-flex justify-content-around flex-wrap">
    <div class="panel panel-default imgPanel">
        <!-- Default panel contents -->
        <div class="panel-heading">站点提示</div>
        <div class="panel-body">
            <p>欢迎来到妖气漫画</p>
        </div>

        <!-- List group -->
        <ul class="list-group">
            <li class="list-group-item">广告招商</li>
            <li class="list-group-item">广告招商</li>
            <li class="list-group-item">广告招商</li>
        </ul>
    </div>
</div>
@section scripts{
    <script src="~/js/pagination.js"></script>
    <script>
        var totalNum =@Model.TotalNum/12;
        $('#pager').pagination({
            pageCount: totalNum,
            current: @Model.currentIndex,
            jump: true,
            coping: true,
            homePage: '首页',
            endPage: '末页',
            prevContent: '上页',
            nextContent: '下页',
            callback: function (api) {
                console.log(api.getCurrent())
                window.location.href = window.location.protocol+"//"+ window.location.host + "?pageIndex=" +api.getCurrent()
            }
        });
    </script>
}